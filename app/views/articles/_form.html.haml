= form_for [article] do |f|
  - if article.errors.any?
    #error_explanation.alert-danger
      %h2= "#{pluralize(article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - article.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :content
    = f.text_area :content, class: 'form-control'

  = button_tag class: 'btn btn-success' do
    Save
    %span.glyphicon.glyphicon-save
    %b /
    %span.glyphicon.glyphicon-eye-open

  - unless article.published?
    = button_tag class: 'btn btn-black', name: 'publish' do
      Publish
      %span.glyphicon.glyphicon-share
  - if article.published?
    = button_tag class: 'btn btn-warning', name: 'unpublish' do
      Unublish
      %span.glyphicon.glyphicon-share  
