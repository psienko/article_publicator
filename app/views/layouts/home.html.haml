!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Article Publicator"
    %meta{:content => "#{content_for?(:description) ? yield(:description) : "Article Publicator"}", :name => "description"}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      .row
        .col-lg-8
          = render 'layouts/parts/welcome_jumbotron'
        .col-lg-3.col-lg-offset-1
          = render 'layouts/messages'
          = yield unless user_signed_in?
